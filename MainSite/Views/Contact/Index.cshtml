@model ContactViewModel

<div class="w3-row w3-center w3-padding">
    <div class="w3-col l2 m3 s1">&nbsp;</div>
    <div class="w3-col l8 m6 s10">
        <header class="w3-container w3-padding-32 w3-center w3-black">
            <h1 class="w3-jumbo">Contact Me</h1>
        </header>

        <p>
            @Model.ContactDetails.HeaderText
        </p>
        <p>
            @Model.ContactDetails.Name<br />
            <a href="mailto:@(Model.ContactDetails.EmailAddress)">
                @Model.ContactDetails.EmailAddress
            </a>
        </p>
        <p>
            Download a copy of my resume <a asp-controller="Contact" asp-action="DownloadFile" asp-route-fileGuid="@(Model.ResumeGuid)" asp download>here</a>.
        </p>
        <div style="width: 250px; margin: auto;">
            <div class="badge-base LI-profile-badge"
                 data-locale="en_US"
                 data-size="medium"
                 data-theme="dark"
                 data-type="VERTICAL"
                 data-vanity="johnkiddjr"
                 data-version="v1">
                <a class="badge-base__link LI-simple-link" href="https://www.linkedin.com/in/johnkiddjr?trk=profile-badge">
                    <img src="@(ContentHelper.GetUrlForResource(ContentType.images, "linkedin.png"))" alt="Connect with me on LinkedIn" width="50" />
                </a>
            </div>
        </div>
    </div>
</div>