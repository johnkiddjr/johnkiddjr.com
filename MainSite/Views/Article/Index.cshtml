@model ArticleIndexViewModel

<div class="article-index">
    <h1>Articles</h1>
    @if(Model.Articles.Any())
    {
        @foreach(var article in Model.Articles)
        {
            var cardBackground = MainSite.Helpers.HtmlHelper.GetImageByTags(article.Tags);
            if(cardBackground == null)
            {
                <div class="article-card card-background-image">
                    <a asp-controller="Article" asp-action="ViewArticle" asp-route-articleSlug="@(article.Slug)" class="no-decoration">
                        <span class="article-title">@article.Title</span>
                        <span class="article-preview">@article.PreviewText</span>
                    </a>
                </div>
            }
            else
            {
                <div class="article-card card-background-image" style="background-image: url(@(cardBackground.ImageFileName));">
                    <a asp-controller="Article" asp-action="ViewArticle" asp-route-articleSlug="@(article.Slug)" class="no-decoration">
                        <span class="article-title" style="color: @(cardBackground.TitleFontColor)">@article.Title</span>
                        <span class="article-preview" style="color: @(cardBackground.DescriptionFontColor)">@article.PreviewText</span>
                    </a>
                </div>
            }
        }
    }
    else
    {
        <span>No articles to show...</span>
    }
</div>