@model ArticleIndexViewModel

<div class="article-index">
    <h1>Articles</h1>
    @if(Model.Articles.Any())
    {
        <ul class="no-style">
            @foreach (var article in Model.Articles)
            {
                <li>
                    <a asp-controller="Article" asp-action="ViewArticle" asp-route-articleSlug="@(article.Slug)"><h3>@article.Title</h3></a>
                    <p>
                        @article.PreviewText
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <span>No articles to show...</span>
    }
</div>