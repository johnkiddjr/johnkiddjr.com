@model AboutViewModel

<div class="w3-row w3-center w3-padding">
    <div class="w3-col l2 m3 s1">&nbsp;</div>
    <div class="w3-col l8 m6 s10">
        <header class="w3-container w3-padding-32 w3-center w3-black">
            <h1 class="w3-jumbo">@Model.Name</h1>
        </header>

        <img class="w3-hover-grayscale w3-padding-16" src="@(ContentHelper.GetUrlForResource(ContentType.images, Model.PictureUrl))" alt="The man himself" style="width: 100%; max-width: 400px;" />
        @foreach(var section in Model.Sections)
        {
            <div class="w3-card-4 w3-margin-bottom">
                <header class="w3-container">
                    <h2>@(section.Name)</h2>
                </header>
                @foreach(var detail in section.Details)
                {
                    <div class="w3-container w3-border">
                        @if(detail.PhotoUrl != null)
                        {
                            <img class="w3-left w3-margin-right" style="width: 100%; max-width: 300px;" src="@(ContentHelper.GetUrlForResource(ContentType.images, detail.PhotoUrl))" alt="@(section.Name)" />
                        }
                        <p>
                            @(detail.Description)
                        </p>
                    </div>
                }
            </div>
        }
    </div>
</div>