@model AdminViewModel

<div class="w3-row w3-center w3-padding">
    <div class="w3-col l2 m3 s1">&nbsp;</div>
    <div class="w3-col l8 m6 s10">
        <div class="w3-row">
            <header class="w3-container w3-padding-32 w3-center w3-black">
                <h1 class="w3-jumbo">Admin Dashboard</h1>
            </header>

            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="w3-panel w3-blue w3-border w3-auto w3-display-container" style="width:25%">
                    <span onclick="this.parentElement.style.display='none'" class="w3-button w3-large w3-display-topright">&times;</span>
                    <h3>Information!</h3>
                    <p>
                        @Model.Message
                    </p>
                </div>
            }

            @foreach(var adminSection in Model.Sections)
            {
                <div class="w3-col l6 m6">
                    <div class="w3-card-4 w3-margin-bottom w3-margin-left w3-margin-right">
                        <header class="w3-container">
                            <h3>@adminSection.HeaderText</h3>
                        </header>
                        <ul class="w3-ul w3-border">
                            @foreach(var sectionItem in adminSection.SectionItems)
                            {
                                <a style="text-decoration: none;" href="@sectionItem.LinkUrl">
                                    <li>@sectionItem.LinkText</li>
                                </a>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="w3-padding-64"></div>